  <!--查询团购和无活动商品  -->
  <select id="selectAllOrderTypeOrId" parameterType="com.ry.dto.GoodsDto" resultMap="typeMap">
select*from(
select a.*,b.id as tjid,b.goodsId,b.status as tjstatus,case when b.type is null then -1 else b.type END as type,
b.endDate,b.ninNum,b.context,c.typeName,d.id as uid,d.realname from b_goods a 
LEFT JOIN b_tjgoods b on a.id=b.goodsId 
LEFT JOIN s_goodstype c on a.typeId=c.id 
LEFT JOIN b_customer d on a.userid=d.id) a

  <where>
  <choose>
  	<when test="type!=null and type!=''">
  		 a.type=${type}
  	</when>
  	<otherwise>
  		a.type=-1
  	</otherwise>
  </choose>
  	<if test="goodsname!=null and goodsname!='' ">
  		and (goodsname like '%${goodsname}%' or goodsno like '%${goodsname}%')
  	</if>
  </where>
  order by goodsNo desc
  </select>
  
  
