  <select id="selecttjByPage" resultMap="map1" >
    SELECT a.id,a.goodsId,a.`status`,a.type,b.goodsNo,b.goodsName,b.goodsInfo,b.indexImg from b_tjgoods a LEFT JOIN b_goods b on a.goodsId=b.id 
    
    <where>
    <if test="goodsno!=null and goodsno!=''">
    b.status==0 and b.goodsno like '%${goodsno}%' or b.goodsname like '%${goodsno}%'
    </if>
    </where>
    order by a.type desc
    </select>
    
    <resultMap type="com.ry.dto.BTjgoodsDto" id="map1">
	    <id column="id" property="id"/>
	    <result column="status" property="status"/>
	    <result column="type" property="type"/>
	    <result column="contextTopic" property="contexttopic"/>
	    <association property="context" javaType="BTjgoodsWithBLOBs">
	    	<result column="context" property="context"/>
	    </association>
    </resultMap>
    
    <!-- 后台查询活动信息  -->
    <select id="selectactivitiesByPage" parameterType="com.ry.dto.BTjgoodsDto" resultMap="map1">
    	select id,type,contextTopic,context,status from b_tjgoods 
    	<where>
    		and type like '2%'
    		<if test="contexttopic!=null and contexttopic!=''">
    		 and type like '%${contexttopic}%' or contexttopic like '%${contexttopic}%'
    		</if>
    	</where>
    	order by id desc
    </select>

  
