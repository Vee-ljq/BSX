	<!--查询活动等相关信息  -->
	<select id="selectActGoods" parameterType="int" resultMap="mapact">
	select a.*,b.goodsName,b.price,b.indexImg from b_tjgoods a LEFT JOIN b_goods b on a.goodsId=b.id
	where a.`status`=1 and b.`status`=0 and a.type like '${value}%'
	
	</select>

